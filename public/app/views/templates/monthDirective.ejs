<div class="month">
<div class="left" ng-click="previous()"><</div>
{{month.format("MMMM YYYY")}}
<div class="right" ng-click="next()">></div>
</div>
<div class="week names">
    <div class="day weekday" ng-repeat="day in days">{{day}}</div>
</div>
<div class="week" ng-repeat="week in weeks">
    <div class="day number" ng-class="{'different-month': !day.isCurrentMonth, 'today': day.isToday}" ng-repeat="day in week.days" ng-click="showDay(day)">{{day.number}}
        <div class="event-list" ng-repeat="event in day.events">{{event.name}} {{event.start}}</div>
    </div>
</div>

<div ng-show="dayShown" class="day-modal">
    <div class="day-modal-overlay" ng-click="hideDay()"></div>
    <div class="day-info">
        <strong>{{daySelected.date.format("MMMM DD, YYYY")}}</strong>
        <form>
            Event Name: <input type="text" ng-model="event.name"/><br />
            Event Description: <input type="text" ng-model="event.description"/><br/>
            Start Time: <input type="text" ng-model="event.start"/><br />
            End Time: <input type="text" ng-model="event.end"/>
            <input type="submit" ng-click="updateDay(event)" value="Add Event" />            
        </form>
        <div class="list-events">
            <div ng-repeat="event in daySelected.events track by $index">
                Event Name: {{event.name}} <br/>
                Event Description: {{event.description}}<br/>
                Start Time: {{event.start}}<br/>
                End Time: {{event.end}}<br/>
            </div>
        </div>
    </div>
</div>